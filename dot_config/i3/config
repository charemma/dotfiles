# set $refresh_i3status killall -SIGUSR1 i3status
# bindsym F7 exec --no-startup-id exec playerctl previous
bindsym F8 exec --no-startup-id exec playerctl play-pause
bindsym F9 exec --no-startup-id exec playerctl next

bindsym F12 exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym F11 exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym F10 exec --no-startup-id pactl set-sink-mute 0 toggle

